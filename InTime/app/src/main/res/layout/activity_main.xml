<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">

    <ImageView
        android:id="@+id/intimelogoLogin"
        android:layout_gravity="center_horizontal"
        android:layout_width="312dp"
        android:layout_height="183dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:scaleType="centerCrop"
        android:src="@drawable/intimelogo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inicio"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="65dp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/urbanistbold"/>

    <EditText
        android:layout_gravity="center_horizontal"
        android:id="@+id/editTextNombreUsu"
        android:layout_width="266dp"
        android:layout_height="39dp"
        android:layout_marginTop="21dp"
        android:hint="Nombre de Usuario"
        android:fontFamily="@font/montserratlight"
        android:textSize="20dp"
        android:inputType="text"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColorHint="#000"
        android:background="@drawable/custom_edittext_background"
        />
    <EditText
        android:layout_gravity="center_horizontal"
        android:id="@+id/editTextPass"
        android:layout_width="266dp"
        android:layout_height="39dp"
        android:layout_marginTop="48dp"
        android:hint="Contraseña"
        android:fontFamily="@font/montserratlight"
        android:textSize="20dp"
        android:inputType="textPassword"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColorHint="#000"
        android:background="@drawable/custom_edittext_background"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCrearCuenta"
        android:layout_width="243dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="46dp"
        android:backgroundTint="#59CE73"
        android:fontFamily="@font/urbanistbold"
        android:onClick="ComprobarCuentaClick"
        android:text="Comprobar"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Olvidaste la contraseña?"
        android:textSize="13dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/urbanistbold"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No tienes cuenta. "
            android:fontFamily="@font/urbanistbold"
            android:textColor="@color/white"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/textViewTyC"
            android:fontFamily="@font/urbanistbold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Créala"
            android:textColor="#59CE73"
            android:textSize="13dp" />
    </LinearLayout>

</LinearLayout>