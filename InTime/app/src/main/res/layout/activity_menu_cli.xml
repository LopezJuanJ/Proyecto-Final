<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#000000">

  <ImageView
      android:id="@+id/intimelogoLogin"
      android:layout_gravity="center_horizontal"
      android:layout_width="322dp"
      android:layout_height="96dp"
      android:layout_marginTop="20dp"
      android:scaleType="centerCrop"
      android:src="@drawable/intimelogo2" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="MenÃº"
      android:textSize="40dp"
      android:textStyle="bold"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="7dp"
      android:textColor="#FFFFFF"
      android:fontFamily="@font/urbanistbold"/>

  <!-- GridLayout for buttons -->
  <GridLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:columnCount="2"
      android:rowCount="3"
      android:layout_marginTop="31dp"
      android:layout_gravity="center">

    <!-- Buttons in the first column -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/Reservar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginRight="14.5dp"
        android:layout_marginBottom="27dp"
        android:backgroundTint="#4c4c4c"
        android:fontFamily="@font/urbanistbold"
        app:cornerRadius="10dp"
        android:text="Reservar"
        android:textColor="@color/white"
        android:textSize="22dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Chat"
        android:layout_marginLeft="14.5dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="27dp"
        android:backgroundTint="#4c4c4c"
        android:fontFamily="@font/urbanistbold"
        app:cornerRadius="10dp"
        android:text="Chat"
        android:textColor="@color/white"
        android:textSize="22dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Perfil"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginRight="14.5dp"
        android:layout_marginBottom="27dp"
        android:backgroundTint="#4c4c4c"
        android:fontFamily="@font/urbanistbold"
        app:cornerRadius="10dp"
        android:text="Perfil"
        android:textColor="@color/white"
        android:textSize="22dp" />

    <!-- Buttons in the second column -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/Gimnasio"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="14.5dp"
        android:layout_marginBottom="27dp"
        android:backgroundTint="#4c4c4c"
        android:fontFamily="@font/urbanistbold"
        app:cornerRadius="10dp"
        android:text="Gimanasio"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/MiCuerpo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginRight="14.5dp"
        android:layout_marginBottom="27dp"
        android:backgroundTint="#4c4c4c"
        android:fontFamily="@font/urbanistbold"
        app:cornerRadius="10dp"
        android:text="Mi Cuerpo"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Salir"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="14.5dp"
        android:layout_marginBottom="27dp"
        android:backgroundTint="#4c4c4c"
        android:fontFamily="@font/urbanistbold"
        app:cornerRadius="10dp"
        android:text="Salir"
        android:textColor="@color/white"
        android:textSize="22dp"
           />

  </GridLayout>
</LinearLayout>
